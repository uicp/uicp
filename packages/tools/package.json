{
  "name": "@uicp/tools",
  "version": "0.1.0",
  "description": "Framework-agnostic AI tools for UICP component discovery and creation",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "keywords": [
    "uicp",
    "ai-tools",
    "llm",
    "ui-components",
    "component-discovery"
  ],
  "author": "UICP Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/indigoai-us/uicp.git",
    "directory": "packages/tools"
  },
  "dependencies": {
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}

